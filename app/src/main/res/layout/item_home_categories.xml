<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/electrician_frame"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="10dp"
    android:layout_toStartOf="@+id/view"
    android:layout_weight="1"
    android:background="@drawable/frame_175"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/electrician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/round_electrician"
            android:layout_marginStart="24dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/inter_bold"
            android:gravity="top"
            android:text="@string/electrician"
            android:textAppearance="@style/electrician" />

        <RelativeLayout
            android:id="@+id/round_electrician"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/ellipse_grid_layout">

            <ImageView
                android:id="@+id/img_electrician_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerInParent="true"
                android:src="@drawable/vector_electrician_symbol" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/electrician"
            android:layout_alignBottom="@+id/electrician"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/right_arrow_navy_vector" />
    </RelativeLayout>
