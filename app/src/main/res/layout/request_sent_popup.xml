<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkmark_s"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"

    android:layout_gravity="center"
    android:paddingBottom="30dp">


    <ImageView
        android:id="@+id/imgGreenTick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="71dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/green_tick_vector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_sen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgGreenTick"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="top|center"
        android:text="@string/request_sent"
        android:textAppearance="@style/request_sent"
        app:layout_constraintEnd_toEndOf="@+id/imgGreenTick"
        app:layout_constraintStart_toStartOf="@+id/imgGreenTick"
        app:layout_constraintTop_toBottomOf="@+id/imgGreenTick" />

    <TextView
        android:id="@+id/txt_login_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_sen"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/inter_bold"
        android:gravity="top|center"
        android:text="@string/log_in_underlined"
        android:textAppearance="@style/log_in_success"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/request_sen"
        app:layout_constraintStart_toStartOf="@+id/request_sen"
        app:layout_constraintTop_toBottomOf="@+id/request_sen" />

</androidx.constraintlayout.widget.ConstraintLayout>


