<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <rotate
            android:fromDegrees="90"
            android:toDegrees="90"
            android:pivotX="50%"
            android:pivotY="50%">

            <shape
                android:shape="line">
                <size
                    android:width="100dp"
                    android:height="100dp" />
                <stroke
                    android:width="3px"
                    android:color="#1DC141"
                    android:dashWidth="6dp"
                    android:dashGap="6dp" />
            </shape>
        </rotate>
    </item>

</layer-list>
